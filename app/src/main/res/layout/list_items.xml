<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:contentPadding="15dp"
    app:contentPaddingBottom="0dp"
    >

    <RelativeLayout
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="72dp"
            android:layout_height="64dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/imageView"
            android:fontFamily="sans-serif-light"
            android:text="Line 1"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginStart="-64dp"
            android:layout_marginTop="22dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="Line 2"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button12"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="237dp"
            android:background="#839AA2"
            android:text="Reserve Ride"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button13"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="182dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="51dp"
            android:background="#839AA2"
            android:text="View Route"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif"
            android:text="Spots Remaining"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imagethirdStar3"
            android:layout_width="35dp"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="285dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="68dp"
            android:layout_marginBottom="8dp"
            android:background="@mipmap/ic_star"
            android:contentDescription="TODO" />

        <View
            android:id="@+id/divider8"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-4dp"
            android:layout_marginTop="242dp"
            android:layout_marginEnd="14dp"
            android:background="#839AA2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView39"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="121dp"
            android:layout_marginEnd="32dp"
            android:text="Departure: January 14, 5:30 PM"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="47dp"
            android:layout_height="27dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="319dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="-3dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="5dp"
            android:text="3.8/5"
            android:textColor="@color/colorAccent"
            android:textSize="17sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>