<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:contentPadding="10dp"
    app:contentPaddingBottom="0dp"
    >

    <RelativeLayout
        android:layout_width="415dp"
        android:layout_height="161dp"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="72dp"
            android:layout_height="64dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="158dp"
            android:layout_height="34dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@+id/imageView"
            android:fontFamily="sans-serif-light"
            android:text="Line 1"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageRater2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="346dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@mipmap/ic_raters"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.043"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.789" />


        <TextView
            android:id="@+id/textView9"
            android:layout_width="266dp"
            android:layout_height="72dp"
            android:layout_alignStart="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="74dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="75dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimaryDark"
            android:minWidth="100sp"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:text="Commentary"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.499" />

        <ImageView
            android:id="@+id/imagethirdStar3"
            android:layout_width="32dp"
            android:layout_height="27dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="236dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="147dp"
            android:layout_marginBottom="8dp"
            android:background="@mipmap/ic_star"
            android:contentDescription="TODO" />

        <View
            android:id="@+id/divider8"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="12dp"
            android:background="#839AA2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="54dp"
            android:layout_height="22dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="266dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="95dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="5dp"
            android:text="3.8/5"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>